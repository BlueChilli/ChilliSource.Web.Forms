{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        "allowJs": true,
        "strict": true,
        "jsx": "react",
        "sourceMap": true,
        "typeRoots": [
            "./Frecl/Types/**"
        ]
    },
    "exclude": [
        "node_modules",
        "custom_modules",
        "**/*.test*.*",
        "doc"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true
    }
}

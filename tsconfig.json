{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "module": "es6",
        "moduleResolution": "node",
        "allowJs": true,
        "jsx": "react",
        "sourceMap": true,
        "alwaysStrict": true,
        "pretty": true,
        "lib": [
            "es6",
            "dom"
        ],
        "typeRoots": [
            "./Frecl/Types/**",
            "./typings/declare.d.ts"
        ]
